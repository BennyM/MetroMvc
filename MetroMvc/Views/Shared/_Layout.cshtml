<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/metro/metro.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.5.3.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        
        <header>
            <div id="title">
                <h1>@ViewBag.Title</h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
        </header>
        
        <nav>
            <ul id="menu" class="metro-list">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("Headers", "Index", "Headers")</li>
                <li>@Html.ActionLink("Lists", "Index", "Lists")</li>
                <li>@Html.ActionLink("Progress Bars", "Index", "ProgressBars")</li>
                <li>@Html.ActionLink("Tiles", "Index", "Tiles")</li>
                <li>@Html.ActionLink("Tables", "Index", "Tables")</li>
                <li>@Html.ActionLink("Forms", "Index", "Forms")</li>
            </ul>
        </nav>

        <section id="main">
            @RenderBody()
        </section>

        <footer>
        </footer>

    </div>
</body>
</html>
